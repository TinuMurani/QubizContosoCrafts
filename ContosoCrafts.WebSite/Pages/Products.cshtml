@page

@using ContosoCrafts.WebSite.Components
@using ContosoCrafts.WebSite.Models
@inject Repositories.IProductRepository _productsRepository


@{
    ViewData["Title"] = "Products Dashboard";
}

<div>
    <h3 class="text-primary">Products</h3>
    <table class="table table-borderless table-dark table-striped">
        <thead class="thead-dark text-white">
            <tr>
                <th>Title</th>
                <th>Maker</th>
                <th>Description</th>
                <th>Url</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in _productsRepository.GetProducts())
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Maker)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    <img src="@item.Image" height="50"/>
                </td>
                <td class="text-right">
                   <a class="btn btn-primary" asp-action="Edit">Edit</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
